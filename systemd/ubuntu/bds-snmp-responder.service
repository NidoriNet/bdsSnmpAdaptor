[Unit]
Description=RtBrick SNMP Command Responder
After=network.target auditd.service

[Service]
ExecStart=/usr/local/bin/bds-snmp-responder --config /etc/bdssnmpadaptor/responder.yml
ExecStop=/usr/bin/killall bds-snmp-responder
KillMode=process
Restart=on-failure
Type=simple

[Install]
WantedBy=multi-user.target
