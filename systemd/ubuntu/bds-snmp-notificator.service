[Unit]
Description=RtBrick SNMP Notification Originator
After=network.target auditd.service

[Service]
ExecStart=/usr/local/bin/bds-snmp-notificator --config /etc/bdssnmpadaptor/notificator.yml
ExecStop=/usr/bin/killall bds-snmp-notificator
KillMode=process
Restart=on-failure
Type=simple

[Install]
WantedBy=multi-user.target
